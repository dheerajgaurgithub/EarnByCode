# Server environment example (safe to commit)
# Copy to .env and fill secrets locally or in your hosting env.

# URLs
FRONTEND_URL=https://algobucks-tau.vercel.app
FRONTEND_ORIGIN=https://algobucks-tau.vercel.app
API_URL=https://algobucks.onrender.com

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=DataSet

# Auth
JWT_SECRET=change_me
JWT_EXPIRE=30d
SESSION_SECRET=change_me

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SMTP (Contact page) - Note: SMTP may be blocked on Render, use Gmail API instead
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=replyearnbycode@gmail.com
SMTP_PASS=pfljbpujfoelrrxj
EMAIL_FROM=replyearnbycode@gmail.com

# Email provider (recommended: gmailapi for Render hosting)
# Gmail API is more reliable than SMTP on Render
EMAIL_PROVIDER=gmailapi
USE_GMAIL_API=true
ENABLE_EMAIL_SENDING=true

# Gmail API OAuth2 credentials (get from Google Cloud Console)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_SENDER=replyearnbycode@gmail.com
# Sender email (must be verified with your provider)
EMAIL_FROM=
# Frontend build consumes this if proxied
VITE_API_URL=https://algobucks.onrender.com/api

# Payments (if used)
PAYMENTS_MODE=live
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Runtimes
JAVAC_BIN=javac
JAVA_BIN=java
